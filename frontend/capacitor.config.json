{
  "appId": "com.drishti.ne",
  "appName": "Team Matrix",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "cleartext": true,
    "allowNavigation": [
      "192.168.*.*",
      "157.245.111.124.nip.io"
    ]
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "launchAutoHide": true,
      "launchFadeOutDuration": 500,
      "backgroundColor": "#020617",
      "androidSplashResourceName": "splash",
      "showSpinner": false
    },
    "Geolocation": {
      "locationWhenInUseUsageDescription": "We need your location for SOS routing and Safety Maps."
    },
    "MeshNetwork": {
      "enabled": true
    },
    "Filesystem": {
      "ios": {
        "UIFileSharingEnabled": true
      },
      "android": {
        "writeExternalStorageOnAndroid10": true
      }
    }
  }
}