import React, { useRef, useEffect, useState } from "react";
import mapboxgl from "mapbox-gl";
import "mapbox-gl/dist/mapbox-gl.css";
import { Layers, Satellite } from "lucide-react";

// MAPBOX TOKEN
const MAPBOX_TOKEN =
  "pk.eyJ1IjoidHVzaGFyZ2FkaGUiLCJhIjoiY21rbnlpNjZqMDBtbDNmc2FmZW9idWwzdSJ9.5kKsUK-lEQmpM5kJrtvkDg";

mapboxgl.accessToken = MAPBOX_TOKEN;

const MapboxMap = ({
  startCoords,
  destCoords,
  currentLocation,
  routeData = null,
  riskLevel = "UNKNOWN",
  onMapLoad = () => {},
}) => {
  const mapContainer = useRef(null);
  const map = useRef(null);
  const [mapStyle, setMapStyle] = useState("streets");
  const [mapReady, setMapReady] = useState(false);

  const startMarkerRef = useRef(null);
  const destMarkerRef = useRef(null);
  const currentMarkerRef = useRef(null);

  // Map style URLs
  const styleUrls = {
    streets: "mapbox://styles/mapbox/streets-v12",
    satellite: "mapbox://styles/mapbox/satellite-streets-v12",
  };

  // Initialize and update map - RECREATE on style change (SIMPLE & RELIABLE)
  useEffect(() => {
    // Cleanup existing map
    if (map.current) {
      console.log("üóëÔ∏è Removing old map");
      map.current.remove();
      map.current = null;
      setMapReady(false);
    }

    if (!mapContainer.current) return;

    console.log(`üó∫Ô∏è Creating map with ${mapStyle} style`);

    // Create new map
    try {
      map.current = new mapboxgl.Map({
        container: mapContainer.current,
        style: styleUrls[mapStyle],
        center: [startCoords[1], startCoords[0]],
        zoom: 10,
        attributionControl: false,
      });

      console.log("‚úÖ Map instance created");
      console.log("üì¶ Container dimensions:", {
        width: mapContainer.current.offsetWidth,
        height: mapContainer.current.offsetHeight,
      });
    } catch (error) {
      console.error("‚ùå Failed to create map:", error);
      return;
    }

    // Add controls
    map.current.addControl(new mapboxgl.NavigationControl(), "top-right");
    map.current.addControl(
      new mapboxgl.ScaleControl({ maxWidth: 100, unit: "metric" }),
      "bottom-left",
    );

    // Map load handler
    map.current.on("load", () => {
      console.log("‚úÖ Map loaded");
      console.log("üé® Map style loaded:", map.current.getStyle().name);
      console.log(
        "üìê Canvas size:",
        map.current.getCanvas().width,
        "x",
        map.current.getCanvas().height,
      );
      setMapReady(true);
      onMapLoad(map.current);

      // Force resize multiple times
      setTimeout(() => {
        if (map.current) {
          console.log("üìê Force resize #1");
          map.current.resize();
        }
      }, 100);

      setTimeout(() => {
        if (map.current) {
          console.log("üìê Force resize #2");
          map.current.resize();
        }
      }, 500);

      setTimeout(() => {
        if (map.current) {
          console.log("üìê Force resize #3");
          map.current.resize();
        }
      }, 1000);
    });

    map.current.on("error", (e) => {
      console.error("‚ùå Map error:", e);
    });

    // Cleanup
    return () => {
      if (map.current) {
        map.current.remove();
        map.current = null;
      }
    };
  }, [mapStyle]); // Recreate map when style changes

  // Add markers when map is ready
  useEffect(() => {
    if (!map.current || !mapReady) return;

    console.log("üìç Adding markers");

    // Clear old markers
    if (startMarkerRef.current) startMarkerRef.current.remove();
    if (destMarkerRef.current) destMarkerRef.current.remove();
    if (currentMarkerRef.current) currentMarkerRef.current.remove();

    // Add start marker (green)
    const startEl = document.createElement("div");
    startEl.style.cssText = `
      width: 32px;
      height: 32px;
      background-color: #10b981;
      border: 3px solid white;
      border-radius: 50%;
      box-shadow: 0 2px 8px rgba(0,0,0,0.3);
    `;
    startMarkerRef.current = new mapboxgl.Marker(startEl)
      .setLngLat([startCoords[1], startCoords[0]])
      .setPopup(new mapboxgl.Popup().setHTML("<strong>üìç Start</strong>"))
      .addTo(map.current);

    // Add destination marker (red)
    const destEl = document.createElement("div");
    destEl.style.cssText = `
      width: 32px;
      height: 32px;
      background-color: #ef4444;
      border: 3px solid white;
      border-radius: 50%;
      box-shadow: 0 2px 8px rgba(0,0,0,0.3);
    `;
    destMarkerRef.current = new mapboxgl.Marker(destEl)
      .setLngLat([destCoords[1], destCoords[0]])
      .setPopup(new mapboxgl.Popup().setHTML("<strong>üéØ Destination</strong>"))
      .addTo(map.current);

    // Add current location marker (blue)
    if (currentLocation) {
      const currentEl = document.createElement("div");
      currentEl.style.cssText = `
        width: 20px;
        height: 20px;
        background-color: #3b82f6;
        border: 3px solid white;
        border-radius: 50%;
        box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.3);
      `;
      currentMarkerRef.current = new mapboxgl.Marker(currentEl)
        .setLngLat([currentLocation[1], currentLocation[0]])
        .addTo(map.current);
    }

    // Fit bounds
    const bounds = new mapboxgl.LngLatBounds();
    bounds.extend([startCoords[1], startCoords[0]]);
    bounds.extend([destCoords[1], destCoords[0]]);
    if (currentLocation)
      bounds.extend([currentLocation[1], currentLocation[0]]);

    map.current.fitBounds(bounds, {
      padding: { top: 100, bottom: 100, left: 50, right: 50 },
      maxZoom: 14,
    });
  }, [mapReady, startCoords, destCoords, currentLocation]);

  // Add route when available
  useEffect(() => {
    if (!map.current || !mapReady || !routeData) return;

    console.log("üõ£Ô∏è Adding route");

    // Remove old route
    if (map.current.getLayer("route-line")) {
      map.current.removeLayer("route-line");
    }
    if (map.current.getSource("route")) {
      map.current.removeSource("route");
    }

    // Route colors
    const routeColors = {
      SAFE: "#10b981",
      MODERATE: "#f59e0b",
      CAUTION: "#f59e0b",
      CRITICAL: "#ef4444",
      DANGEROUS: "#dc2626",
      UNKNOWN: "#64748b",
    };

    // Add route
    map.current.addSource("route", {
      type: "geojson",
      data: routeData,
    });

    map.current.addLayer({
      id: "route-line",
      type: "line",
      source: "route",
      paint: {
        "line-color": routeColors[riskLevel] || routeColors.UNKNOWN,
        "line-width": 6,
        "line-opacity": 0.8,
      },
    });

    // Fit to route
    if (routeData.geometry?.coordinates) {
      const coordinates = routeData.geometry.coordinates;
      const bounds = coordinates.reduce(
        (bounds, coord) => bounds.extend(coord),
        new mapboxgl.LngLatBounds(coordinates[0], coordinates[0]),
      );
      map.current.fitBounds(bounds, { padding: 100 });
    }
  }, [mapReady, routeData, riskLevel]);

  return (
    <div
      className="relative w-full h-full bg-slate-900"
      style={{ minHeight: "400px" }}
    >
      <div
        ref={mapContainer}
        className="mapboxgl-map"
        style={{
          width: "100%",
          height: "100%",
          position: "absolute",
          top: 0,
          left: 0,
          minHeight: "400px",
        }}
      />

      {/* Debug Info */}
      <div className="absolute top-4 left-4 z-[999] bg-yellow-600 text-white px-3 py-2 rounded-lg text-xs font-bold pointer-events-none">
        Map: {mapReady ? "‚úÖ Ready" : "‚è≥ Loading..."} | Style: {mapStyle}
      </div>

      {/* Risk Indicator */}
      {riskLevel !== "UNKNOWN" && (
        <div
          className={`absolute bottom-20 left-4 z-10 px-4 py-2 rounded-lg shadow-lg font-bold text-sm ${
            riskLevel === "SAFE"
              ? "bg-green-600 text-white"
              : riskLevel === "MODERATE" || riskLevel === "CAUTION"
                ? "bg-yellow-600 text-white"
                : "bg-red-600 text-white"
          }`}
        >
          {riskLevel === "SAFE" && "‚úì SAFE ROUTE"}
          {riskLevel === "MODERATE" && "‚ö†Ô∏è MODERATE RISK"}
          {riskLevel === "CAUTION" && "‚ö†Ô∏è CAUTION"}
          {riskLevel === "CRITICAL" && "‚ö†Ô∏è HIGH RISK"}
          {riskLevel === "DANGEROUS" && "üö´ DANGEROUS"}
        </div>
      )}
    </div>
  );
};

export default MapboxMap;
